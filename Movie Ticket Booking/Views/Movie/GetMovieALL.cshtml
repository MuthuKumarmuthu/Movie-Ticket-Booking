@model IEnumerable<BusinessObject.MovieDetails>
@{
    ViewBag.Title = "MovieALL";
}
@{

    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<br>
<h3>Movies</h3>
<br>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Moviename)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Movieimage)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Language)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Releasedate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
     
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Moviename)
            </td>
            <td>

                <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" width="100" height="100" />


            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Language)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Releasedate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
      
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { Movieid = item.Movieid }) @*|  @Html.ActionLink("Delete", "Delete", new { Movieid = item.Movieid }) |*@

            </td>
        </tr>
    }
</table>
